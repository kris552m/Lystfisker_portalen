@rendermode InteractiveServer
<!-- Modal -->
<div class="modal fade" id="CreatePostModal" tabindex="-1" role="dialog" aria-labelledby="CreatePostModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Opret Opslag</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

                <div class="modal-body">
                        <ProfileComponent></ProfileComponent>

                    <textarea 
                                class="form-control" 
                                id="message-text"
                                style="height: 156px; margin-top:12px;"
                                placeholder="Opret et offentligt opslag"
                                @bind="Description"
                                >
                    </textarea>

                    <div class="form-check "style="margin:10px 8px;"> 
                        <InputCheckbox type="checkbox" class="form-check-input" id="isQuestion" @bind-Value="IsQuestion"></InputCheckbox>
                        <label class="form-check-label" for="isQuestion" >Er det et spørgsmål?</label> 
                    </div>
                    <PostAddonsComponent ImgName="@ImgHandler"></PostAddonsComponent>

                </div>
           
            <PostCreateButton PostType="general" Description="@Description" IsQuestion="@IsQuestion"></PostCreateButton>
        </div>
    </div>
</div>


@code {

    public async Task ImgHandler(string name)
    {
        ImgName = name;
    }

    public string ImgName { get; set; } = null;
    public string Description { get; set; } = null;
    public bool IsQuestion { get; set; } = false;
  

}
