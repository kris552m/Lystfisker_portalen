<div class="modal fade" id="OpenEmojiePicker" tabindex="-1" role="dialog" aria-labelledby="Emopjipicker" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <p class="text-muted" style="font-size:12px;">Smilies & emojies</p>
                <div class="emoji-picker">
                    @foreach (var emoji in EmojiMap)
                    {
                        <button type="button">
                            @emoji.Value
                        </button>
                    }
                </div>
                
            </div>
        </div>
                
    </div>
</div>


