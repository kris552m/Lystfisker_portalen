@page "/profile"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using LystfiskerPortalen.Models
@using LystfiskerPortalen.Persistence
@inject IPostRepository PostRepo
@inject IProfileRepository ProfileRepo

<h1>Profilside</h1>

@if (authState is null)
{
    <div>Indlæser...</div>
}
else
{
    <div class="container mt-4">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <img src="@ProfileImageUrl" class="rounded-circle mb-3" alt="Profile Picture" width="120" height="120" />
                <h3>@UserName</h3>
                <button class="btn btn-primary me-2">Follow</button>
                <button class="btn btn-outline-secondary">Message</button>
            </div>
        </div>

        <div class="row text-center mt-2">
            <div class="col">
                <h5>@FollowersCount</h5>
                <small>Followers</small>
            </div>
            <div class="col">
                <h5>@FollowingCount</h5>
                <small>Following</small>
            </div>
        </div>

        <div class="mt-4">
            @if (UserPosts.Count > 0)
            {
                @foreach (var post in UserPosts)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <h6 class="card-title">@post.Description</h6>
                            @if (post.Pictures.Count > 0 && !string.IsNullOrWhiteSpace(post.Pictures[0].PictureName))
                            {
                                foreach (Picture img in post.Pictures)
                                {
                                    <img src="@img" alt="Post image" class="img-fluid mb-2" />
                                }
                            }
                            <small class="text-muted">@post.PostTime.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-muted">No posts yet.</div>
            }
        </div>
    </div>
}

@code {
    [CascadingParameter] private Task<AuthenticationState>? AuthenticationStateTask { get; set; }
    private AuthenticationState? authState;

    private Profile? CurrentProfile;
    private string UserName = string.Empty;
    private string ProfileImageUrl = "/images/default-profile.png";
    private int FollowersCount;
    private int FollowingCount;
    private List<Post> UserPosts = new();

    protected override async Task OnInitializedAsync()
    {
        // Requires authentication state
        if (AuthenticationStateTask is null)
            return;

        var state = await AuthenticationStateTask;

        // Stop if not authenticated
        if (state?.User?.Identity?.IsAuthenticated != true)
            return;

        var user = state.User;
        var userId = GetUserId(user);
        if (string.IsNullOrWhiteSpace(userId))
            return;

        await LoadProfileAsync(userId, user);
        authState = state;


    }

    private async Task LoadProfileAsync(string userId, ClaimsPrincipal user)
    {
        CurrentProfile = await ProfileRepo.GetByUserIdAsync(userId);

        // Basic identity info
        UserName = CurrentProfile?.UserName ?? GetUserName(user);
        ProfileImageUrl = string.IsNullOrWhiteSpace(CurrentProfile?.ProfilePicture)
        ? "/images/default-profile.png"
        : CurrentProfile!.ProfilePicture;

        // Counts and posts
        FollowersCount = CurrentProfile?.FollowersCount ?? 0;
        FollowingCount = CurrentProfile?.FollowingCount ?? 0;

        if (CurrentProfile is not null)
        {
            UserPosts = await PostRepo.GetPostsByProfileIdAsync(CurrentProfile.Id) ?? new List<Post>();
        }
    }

    private static string? GetUserId(ClaimsPrincipal user) =>
    user.FindFirst(ClaimTypes.NameIdentifier)?.Value ??
    user.FindFirst("sub")?.Value ??
    user.Identity?.Name;

    private static string GetUserName(ClaimsPrincipal user) =>
    user.FindFirst("name")?.Value ??
    user.FindFirst("preferred_username")?.Value ??
    user.FindFirst(ClaimTypes.GivenName)?.Value ??
    user.Identity?.Name ?? "Bruger";
}